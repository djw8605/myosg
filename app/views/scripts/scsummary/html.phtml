<?

foreach($this->scs as $sc_id=>$sc) {
    //echo $sc_id;

    $name = $sc->name;
    $ex_class = "";
    if($sc->disable == 1) {
        $name .= " (Removed)";
        $ex_class = "disabled";
    }
    if($sc->active == 0) {
        $name .= " (Inactive)";
    }

    echo "<div class=\"support_center round\">";
    echo "<span class=\"h3\">".$name."</span>";
    if(isset($_REQUEST["summary_attrs_showdesc"])) {
        echo "<br/>";
        echo htmlentities($sc->description);
    }
    echo "</div>";

    echo "<table class='summary_table'>";
    echo "<tr><th>Long Name</th><td>".htmlentities($sc->long_name)."</td></tr>";
    echo "<tr><th>Community</th><td>".htmlentities($sc->community)."</td></tr>";

    echo "<tr><th>Primary Operations Contact</th><td>";

    if(count($sc->contact) > 0) {
        if(user()->isGuest()) {
            echo htmlentities($sc->contact[0]->name)."<br/>";
        } else {
            echo "<div class=\"contact_info\">";
            echo "<h3>".htmlentities($sc->contact[0]->name)."</h3>";
            echo "<table class=\"summary_subtable\">"; 
            echo "<tr><th>Email</th><td>".emailaddress($sc->contact[0]->primary_email)."</td></tr>";
            echo "<tr><th>Phone</th><td>".htmlentities($sc->contact[0]->primary_phone)."</td></tr>";
            echo "</table>";
            echo "</div>";
        }
    } else {
        echo "(No contact specified)";
    }

    echo "</td></tr>";
    echo "</table>";
}
