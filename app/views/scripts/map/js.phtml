        $rg_has_resource = false;
        if(isset($this->resources_bygid[$rg->id])) {
            $rs = $this->resources_bygid[$rg->id];
            foreach($rs as $r) {
                if($r->active == 0 || $r->disable == 1) continue;
                $rg_has_resource = true;
                $name = $r->name;
