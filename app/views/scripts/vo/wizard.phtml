function wizard_submit(format)
{
    var action = '<?=fullbase()?>/'+$('#datasource').val(); 
    action += "/"+format;
    $('#wizard').attr('action', action);
    $('#wizard').submit(); 
    return false;
}

function disable(e)
{
    var items = $(e).siblings(); 
    $("#all_vos_attrs").show();

    $('#vo_area .fblist_container').hide();
    var items = $(e).siblings("input");
    $(items).removeAttr("checked");
}

function enable(e)
{
    $("#all_vos_attrs").hide();
}

